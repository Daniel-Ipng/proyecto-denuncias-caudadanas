# Variables de entorno para el backend
# Copia este archivo a .env y configura tus valores

# Base de datos MySQL
# Para Railway, usa las variables que proporciona el servicio MySQL
DB_HOST=your_mysql_host
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=railway

# Puerto del servidor (Railway asigna esto automáticamente)
PORT=3001

# JWT Secret (genera uno seguro para producción)
JWT_SECRET=change_this_to_a_secure_random_string

# Entorno
NODE_ENV=production
